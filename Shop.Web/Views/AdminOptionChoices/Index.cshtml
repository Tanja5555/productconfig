@model IEnumerable<TanLeonaShop.Domain.Models.OptionChoice>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Option.OptionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OptionChoiceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OptionChoiceCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OptionChoicePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OptionChoiceDeliveryDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Option.OptionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OptionChoiceName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OptionChoiceCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OptionChoicePrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OptionChoiceDeliveryDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
